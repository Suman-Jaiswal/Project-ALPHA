extends base.pug

block script 
    script 
      include ../static/index.js

block style 
    style 
      include ../static/style.css 
      include ../static/styleContact.css

block content 
  div.container
    h1 
      |Contact Us
    form(action="/contact" , method="post")
      input(type="text" , class="input" , name="name" placeholder="Enter your name")
      input(type="phone" , class="input" , name="phone" placeholder="Enter your phone")
      input(type="email" , class="input" , name="email" placeholder="Enter your email")
      input(type="address" , class="input" , name="address" placeholder="Enter your address")
      textarea(type="desc" , cols="30", rows="10", class="text" , name="desc" placeholder="Describe your query")
      button(class="btn")
        |Submit
        